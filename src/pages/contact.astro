---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Talk to us.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-ws-grey-light">
          Contact the Creator Studio Team
        </h2>
        <p class="text-lg leading-relaxed text-ws-grey-light mt-3">
          Send us a message and we will get back to you as soon as possible.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-ws-grey"></div><div
            class="flex items-center mt-2 space-x-2 text-ws-grey">
            <Icon class="text-ws-grey w-4 h-4" name="uil:envelope" /><a
              href="mailto:webtoonstudio@protonmail.com"
              >webtoonhub@protonmail.com</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
